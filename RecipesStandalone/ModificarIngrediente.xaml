<Window x:Class="RecipesStandalone.ModificarIngrediente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipesStandalone"
        mc:Ignorable="d"
        Title="ModifyIngredient" Height="433" Width="801" Background="#FF829949">
    <Grid>
        <Label Content="Modificar ingrediente" HorizontalAlignment="Left" Margin="243,30,0,0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="30" Height="64" Width="321" FontWeight="Bold"/>
        <TextBox x:Name="txID" HorizontalAlignment="Left" Height="46" Margin="283,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="241" Background="White" BorderBrush="White" FontSize="18"/>
        <TextBox x:Name="txAvgPrice" HorizontalAlignment="Left" Height="46" Margin="283,254,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="241" Background="White" BorderBrush="White" FontSize="18"/>
        <Label Content="ID del ingrediente" HorizontalAlignment="Left" Margin="52,155,0,0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="24" Height="49" Width="226" FontWeight="Bold"/>
        <Label Content="Nuevo precio" HorizontalAlignment="Left" Margin="52,254,0,0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="24" Height="46" Width="208" FontWeight="Bold"/>
