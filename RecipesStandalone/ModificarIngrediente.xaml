        <Button x:Name="btBack" Content="Regresar" HorizontalAlignment="Left" Margin="586,312,0,0" VerticalAlignment="Top" Width="168" Background="White" Height="52" FontFamily="Segoe UI" FontSize="16" Click="btBack_Click" FontWeight="Bold" Foreground="Black" BorderBrush="White"/>
    </Grid>
</Window>
